@model List<Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Employee List</h2>
        <a asp-action="Create" class="btn btn-success">+ Add New Employee</a>
    </div>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Position</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Email</td>
                    <td>@emp.Position</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger me-1">Delete</a>
                        <a asp-controller="Document" asp-action="EmployeeDocs" asp-route-employeeId="@emp.Id" class="btn btn-sm btn-secondary">Upload Docs</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
